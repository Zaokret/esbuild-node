{
    "extends": ["@tsconfig/node-lts/tsconfig.json", "./tsconfig.esbuild.json"],
    "compilerOptions": {
      "noImplicitAny": true,
      "preserveConstEnums": true,
      "sourceMap": true,

      /* total typescript */
      "skipLibCheck": true,
      "verbatimModuleSyntax": true,
      "moduleDetection": "force",
      "noUncheckedIndexedAccess": true,

      "baseUrl": "./",
      "rootDir": "./src",
      "outDir": "dist",
    },
    "include": ["src/**/*"],
    "exclude": ["./dist", "**/*.spec.ts"]
  }